    padding: 5rem 1.5rem;
  }
  .partners-section h2 {
    margin-bottom: 1rem;
  }
  .partners-section > .container > p {
    color: var(--gray-500);
    margin-bottom: 2rem;
  }
  .partners-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
    gap: 2rem;
    margin-bottom: 2rem;
  }
  .partner-card {
    padding: 2rem;
    background: var(--gray-100);
    border-radius: 8px;
  }
  .partner-card h3 {
    margin-bottom: 1rem;
  }
  .partner-card p {
    color: var(--gray-500);
    margin: 0;
  }
  .partners-note {
    font-style: italic;
    color: var(--gray-500);
  }

  .team-section {
    padding: 5rem 1.5rem;
    background: var(--gray-100);
  }
  .team-section h2 {
    margin-bottom: 1rem;
  }
  .team-section > .container > p {
    color: var(--gray-500);
    margin-bottom: 2rem;
  }
