    background: var(--gray-100);
  }
  .stats-section h2 {
    text-align: center;
    margin-bottom: 3rem;
  }
  .stats-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(180px, 1fr));
    gap: 2rem;
    text-align: center;
  }
  .stat-number {
    display: block;
    font-family: 'Poppins', sans-serif;
    font-size: 2.5rem;
    font-weight: 700;
    color: var(--blue);
    line-height: 1;
  }
  .stat-label {
    display: block;
    color: var(--gray-500);
    margin-top: 0.5rem;
