  }

  .what-section {
    padding: 5rem 1.5rem;
  }
  .what-section h2 {
    margin-bottom: 1rem;
  }
  .what-section > .container > p {
    color: var(--gray-500);
    margin-bottom: 2rem;
  }
  .audience-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(400px, 1fr));
    gap: 2rem;
  }
