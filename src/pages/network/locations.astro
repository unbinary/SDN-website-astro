---
import BaseLayout from '../../layouts/BaseLayout.astro';

const localBusinessSchema = {
  "@context": "https://schema.org",
  "@type": "LocalBusiness",
  "name": "Sports Digital Network",
  "description": "Canada's premium digital out-of-home advertising network with 100+ venues across Ontario, Western Canada, and Atlantic Canada.",
  "address": {
    "@type": "PostalAddress",
    "addressLocality": "Toronto",
    "addressRegion": "ON",
    "addressCountry": "CA"
  },
  "areaServed": [
    {"@type": "State", "name": "Ontario"},
    {"@type": "State", "name": "British Columbia"},
    {"@type": "State", "name": "Alberta"},
    {"@type": "State", "name": "Saskatchewan"},
    {"@type": "State", "name": "Nova Scotia"},
    {"@type": "State", "name": "New Brunswick"}
  ]
};
---

<BaseLayout
  title="SDN Venue Locations | 100+ Arenas & Golf Courses Across Canada"
  description="See every arena, golf course, and rec centre in the Sports Digital Network. 100+ venues from Vancouver to Halifax. Find locations near you."
  canonicalPath="/network/locations/"
  schema={localBusinessSchema}
>
  <section class="page-hero">
    <h1>100+ venues across Canada</h1>
    <p>The biggest, busiest sports and recreation facilities from coast to coast</p>
  </section>

  <section class="stats-bar">
    <div class="stats-grid">
      <div class="stat">
        <span class="stat-number">100+</span>
        <span class="stat-label">Venues</span>
      </div>
      <div class="stat">
        <span class="stat-number">3.6M</span>
        <span class="stat-label">Weekly visitors</span>
      </div>
      <div class="stat">
        <span class="stat-number">95%</span>
        <span class="stat-label">Multi-pad facilities</span>
      </div>
      <div class="stat">
        <span class="stat-number">6</span>
        <span class="stat-label">Provinces</span>
      </div>
    </div>
  </section>

  <section class="venue-types">
    <div class="container">
      <h2>What's in our network</h2>
      <div class="types-grid">
        <div class="type-card">
          <div class="type-icon">&#127954;</div>
          <h3>Community arenas</h3>
          <p>Multi-pad hockey arenas and recreation complexes with 2-4 ice pads, spectator seating, and high-traffic lobbies. Partners include Canlan Sports and Nustadia Recreation facilities.</p>
        </div>
        <div class="type-card">
          <div class="type-icon">&#9971;</div>
          <h3>Golf courses</h3>
          <p>Premium clubhouse environments serving affluent members. Includes 24 ClubLink courses across Ontario — Canada's largest private golf network.</p>
        </div>
        <div class="type-card">
          <div class="type-icon">&#9917;</div>
          <h3>Multi-sport facilities</h3>
          <p>Indoor soccer, lacrosse, and multi-sport complexes drawing active, family-oriented visitors year-round.</p>
        </div>
        <div class="type-card">
          <div class="type-icon">&#127946;</div>
          <h3>Recreation centres</h3>
          <p>Multi-use community facilities combining ice pads with pools, gyms, and fitness centres — the highest-traffic public buildings in their communities.</p>
        </div>
      </div>
    </div>
  </section>

  <section class="regions">
    <div class="container">
      <h2>Coverage by region</h2>

      <div class="regions-grid">
        <div class="region-card region-ontario">
          <div class="region-header">
            <h3>Ontario</h3>
            <span class="region-tag">Largest coverage</span>
          </div>
          <p>GTA, Ottawa, Hamilton, Kitchener-Waterloo, London, Brantford, Oshawa, Barrie, and surrounding communities.</p>
          <div class="venue-list">
            <span>Canlan Etobicoke</span>
            <span>Toronto Pan Am Sports Centre</span>
            <span>Cavanagh Sensplex</span>
            <span>Wayne Gretzky Sports Centre</span>
            <span>Sixteen Mile Sports Complex</span>
            <span>Western Fair Sports Centre</span>
            <span>Mohawk 4 Ice Centre</span>
            <span>24 ClubLink courses</span>
          </div>
        </div>

        <div class="region-card">
          <div class="region-header">
            <h3>Western Canada</h3>
          </div>
          <p>BC, Alberta, and Saskatchewan including Vancouver-area, Calgary-area, Regina, and Saskatoon.</p>
          <div class="venue-list">
            <span>Pitt Meadows Arena Complex</span>
            <span>Spray Lakes Sawmills Centre</span>
            <span>Co-operators Centre</span>
            <span>Merlis Belsher Place</span>
            <span>Grande Prairie Sportsplex</span>
          </div>
        </div>

        <div class="region-card">
          <div class="region-header">
            <h3>Atlantic Canada</h3>
          </div>
          <p>Nova Scotia and New Brunswick serving Halifax, Moncton, and surrounding communities.</p>
          <div class="venue-list">
            <span>BMO Centre (Halifax)</span>
            <span>Red Ball Internet Centre</span>
          </div>
        </div>

        <div class="region-card region-quebec">
          <div class="region-header">
            <h3>Quebec</h3>
            <span class="region-tag">Coming soon</span>
          </div>
          <p>Quebec strategy in development through our NAMG partnership with Sport-Media Marketing, covering 89% of arenas in the province.</p>
          <a href="/contact/" class="region-link">Contact us for Quebec campaigns</a>
        </div>
      </div>
    </div>
  </section>

  <section class="request-section">
    <div class="container">
      <div class="request-box">
        <h2>Need a specific venue?</h2>
        <p>Our network is growing. If you want to advertise in a venue that isn't listed, let us know and we'll work to add it.</p>
        <a href="/contact/" class="btn btn-primary">Request a venue</a>
      </div>
    </div>
  </section>

  <section class="cta">
    <div class="cta-content">
      <h2>Own a venue? Join our network.</h2>
      <p>Add digital advertising revenue to your arena, golf course, or recreation centre.</p>
      <a href="/venues/apply/" class="btn-white">Apply to become a partner</a>
    </div>
  </section>
</BaseLayout>

<style>
  .stats-bar {
    background: var(--blue);
    padding: 2rem 1.5rem;
  }
  .stats-bar .stats-grid {
    max-width: 800px;
    margin: 0 auto;
    display: grid;
    grid-template-columns: repeat(4, 1fr);
    gap: 2rem;
    text-align: center;
  }
  .stats-bar .stat-number {
    display: block;
    font-family: 'Poppins', sans-serif;
    font-size: 2.25rem;
    font-weight: 700;
    color: var(--white);
    line-height: 1;
  }
  .stats-bar .stat-label {
    display: block;
    color: rgba(255,255,255,0.85);
    margin-top: 0.25rem;
    font-size: 0.85rem;
  }

  .venue-types {
    padding: 5rem 1.5rem;
    background: var(--white);
  }
  .container {
    max-width: 1140px;
    margin: 0 auto;
  }
  .venue-types h2 {
    text-align: center;
    margin-bottom: 3rem;
  }
  .types-grid {
    display: grid;
    grid-template-columns: repeat(4, 1fr);
    gap: 1.5rem;
  }
  .type-card {
    background: var(--gray-100);
    padding: 2rem 1.5rem;
    border-radius: 8px;
    text-align: center;
  }
  .type-icon {
    font-size: 2.5rem;
    margin-bottom: 1rem;
  }
  .type-card h3 {
    font-size: 1.1rem;
    margin-bottom: 0.75rem;
  }
  .type-card p {
    color: var(--gray-500);
    font-size: 0.9rem;
    line-height: 1.6;
    margin: 0;
  }

  .regions {
    padding: 5rem 1.5rem;
    background: var(--gray-100);
  }
  .regions h2 {
    text-align: center;
    margin-bottom: 3rem;
  }
  .regions-grid {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: 1.5rem;
  }
  .region-card {
    background: var(--white);
    padding: 2rem;
    border-radius: 8px;
    border-left: 4px solid var(--gray-300);
  }
  .region-card.region-ontario {
    border-left-color: var(--blue);
  }
  .region-card.region-quebec {
    border-left-color: var(--gray-400);
    background: var(--gray-100);
  }
  .region-header {
    display: flex;
    align-items: center;
    gap: 1rem;
    margin-bottom: 0.75rem;
  }
  .region-header h3 {
    margin: 0;
    font-size: 1.25rem;
  }
  .region-tag {
    font-size: 0.75rem;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.5px;
    color: var(--blue);
    background: var(--blue-light, #e8f4fd);
    padding: 0.25rem 0.5rem;
    border-radius: 4px;
  }
  .region-quebec .region-tag {
    color: var(--gray-500);
    background: var(--gray-200);
  }
  .region-card > p {
    color: var(--gray-500);
    font-size: 0.95rem;
    margin-bottom: 1rem;
    line-height: 1.6;
  }
  .venue-list {
    display: flex;
    flex-wrap: wrap;
    gap: 0.5rem;
  }
  .venue-list span {
    background: var(--gray-100);
    padding: 0.35rem 0.75rem;
    border-radius: 4px;
    font-size: 0.8rem;
    color: var(--gray-600);
  }
  .region-quebec .venue-list span {
    background: var(--gray-200);
  }
  .region-link {
    display: inline-block;
    margin-top: 0.5rem;
    color: var(--blue);
    font-weight: 600;
    font-size: 0.9rem;
  }

  .request-section {
    padding: 5rem 1.5rem;
    background: var(--white);
  }
  .request-box {
    max-width: 600px;
    margin: 0 auto;
    text-align: center;
    background: var(--gray-100);
    padding: 3rem;
    border-radius: 8px;
  }
  .request-box h2 {
    margin-bottom: 0.75rem;
    font-size: 1.5rem;
  }
  .request-box p {
    color: var(--gray-500);
    margin-bottom: 1.5rem;
  }
  .btn {
    display: inline-block;
    padding: 0.875rem 2rem;
    border-radius: 6px;
    font-weight: 600;
    text-decoration: none;
    transition: all 0.3s ease;
  }
  .btn-primary {
    background: var(--blue);
    color: var(--white);
  }
  .btn-primary:hover {
    background: var(--blue-dark);
    transform: translateY(-2px);
  }

  .cta {
    background: var(--black);
    padding: 4rem 1.5rem;
    text-align: center;
  }
  .cta-content {
    max-width: 600px;
    margin: 0 auto;
  }
  .cta h2 {
    color: var(--white);
    margin-bottom: 0.75rem;
    font-size: 1.75rem;
  }
  .cta p {
    color: rgba(255,255,255,0.8);
    margin-bottom: 1.5rem;
  }
  .btn-white {
    display: inline-block;
    background: var(--white);
    color: var(--blue);
    padding: 0.875rem 2rem;
    border-radius: 6px;
    font-weight: 600;
    text-decoration: none;
    transition: all 0.3s ease;
  }
  .btn-white:hover {
    transform: translateY(-2px);
    box-shadow: 0 8px 24px rgba(255,255,255,0.2);
  }

  @media (max-width: 1024px) {
    .types-grid {
      grid-template-columns: repeat(2, 1fr);
    }
  }

  @media (max-width: 768px) {
    .stats-bar .stats-grid {
      grid-template-columns: repeat(2, 1fr);
      gap: 1.5rem;
    }
    .stats-bar .stat-number {
      font-size: 1.75rem;
    }
    .types-grid {
      grid-template-columns: 1fr;
    }
    .regions-grid {
      grid-template-columns: 1fr;
    }
    .request-box {
      padding: 2rem;
    }
  }
</style>
