  }

  .revenue-section {
    padding: 5rem 1.5rem;
    background: var(--gray-100);
  }
  .revenue-section h2 {
    text-align: center;
    margin-bottom: 3rem;
  }
  .revenue-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(400px, 1fr));
    gap: 2rem;
  }
  .revenue-card {
    background: var(--white);
    padding: 2rem;
    border-radius: 8px;
  }
  .revenue-card h3 {
    margin-bottom: 1rem;
  }
