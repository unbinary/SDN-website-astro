    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
    gap: 1.5rem;
    margin-bottom: 2rem;
  }
  .location-item {
    padding: 1.5rem;
    background: var(--white);
    border-radius: 8px;
    border-left: 3px solid var(--blue);
  }
  .location-item strong {
    display: block;
    margin-bottom: 0.25rem;
  }
  .location-item span {
    color: var(--gray-500);
    font-size: 0.95rem;
  }

  .content-section {
    padding: 5rem 1.5rem;
  }
  .content-section h2 {
    margin-bottom: 1rem;
  }
  .content-section > .container > p {
    color: var(--gray-500);
    margin-bottom: 2rem;
  }
  .content-grid {
    display: grid;
    gap: 1rem;
    margin-bottom: 2rem;
  }
  .content-item {
    padding: 1.5rem;
    background: var(--gray-100);
    border-radius: 8px;
  }
  .content-item strong {
    display: block;
    margin-bottom: 0.5rem;
  }
  .content-item p {
    color: var(--gray-500);
    margin: 0;
    font-size: 0.95rem;
  }
  .content-note {
    font-style: italic;
