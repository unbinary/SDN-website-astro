    color: var(--gray-500);
    margin-bottom: 2rem;
  }
  .reasons-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
    gap: 2rem;
    margin-bottom: 2rem;
  }
  .reason-card {
    padding: 2rem;
    background: var(--gray-100);
    border-radius: 8px;
  }
  .reason-card h3 {
    margin-bottom: 1rem;
  }
  .reason-card p {
    color: var(--gray-500);
    margin: 0;
  }
  .highlight-text {
    font-weight: 600;
    font-size: 1.1rem;
    color: var(--black);
  }

