---
import BaseLayout from './BaseLayout.astro';

interface Props {
  title: string;
  description: string;
  canonicalPath: string;
  publishDate?: string;
  author?: string;
  category?: 'advertisers' | 'venues';
}

const {
  title,
  description,
  canonicalPath,
  publishDate,
  author = 'SDN Team',
  category = 'advertisers'
} = Astro.props;

const articleSchema = {
  "@context": "https://schema.org",
  "@type": "Article",
  "headline": title,
  "description": description,
  "author": {
    "@type": "Organization",
    "name": "Sports Digital Network"
  },
  "publisher": {
    "@type": "Organization",
    "name": "Sports Digital Network",
    "logo": {
      "@type": "ImageObject",
      "url": "https://sdnetwork.ca/images/logo-light.png"
    }
  },
  "datePublished": publishDate || new Date().toISOString().split('T')[0],
  "dateModified": new Date().toISOString().split('T')[0]
};
---

<BaseLayout
  title={title}
  description={description}
  canonicalPath={canonicalPath}
  schema={articleSchema}
>
  <article class="blog-article">
    <header class="article-header">
      <div class="container">
        <div class="article-meta">
          <a href="/resources/" class="back-link">Resources</a>
          <span class="separator">/</span>
          <a href="/resources/blog/" class="back-link">Blog</a>
        </div>
        <h1><slot name="title" /></h1>
        <p class="article-excerpt"><slot name="excerpt" /></p>
        <div class="article-info">
          <span class="category">{category === 'advertisers' ? 'For advertisers' : 'For venue owners'}</span>
        </div>
      </div>
    </header>

    <div class="article-content">
      <div class="container">
        <slot />
      </div>
    </div>

    <footer class="article-footer">
      <div class="container">
        <div class="cta-box">
          <h3>Ready to get started?</h3>
          <p>Contact our team for a custom proposal tailored to your goals.</p>
          <div class="cta-buttons">
            <a href="/contact/" class="btn-primary">Request a proposal</a>
            <a href="/resources/media-kit/" class="btn-outline">Download media kit</a>
          </div>
        </div>

        <div class="related-links">
          <h4>Related resources</h4>
          <ul>
            <li><a href="/advertisers/">Advertising options</a></li>
            <li><a href="/contact/">Get a quote</a></li>
            <li><a href="/network/locations/">Our venue network</a></li>
            <li><a href="/resources/blog/">More articles</a></li>
          </ul>
        </div>
      </div>
    </footer>
  </article>
</BaseLayout>

<style>
  .blog-article {
    background: var(--white);
  }

  .article-header {
    padding: 4rem 1.5rem 3rem;
    background: linear-gradient(135deg, var(--black) 0%, #1a2a3a 100%);
    color: var(--white);
  }
  .container {
    max-width: 800px;
    margin: 0 auto;
  }
  .article-meta {
    margin-bottom: 1.5rem;
    font-size: 0.9rem;
    opacity: 0.8;
  }
  .back-link {
    color: var(--white);
    text-decoration: none;
  }
  .back-link:hover {
    text-decoration: underline;
  }
  .separator {
    margin: 0 0.5rem;
    opacity: 0.5;
  }
  .article-header h1 {
    font-size: 2.5rem;
    line-height: 1.2;
    margin-bottom: 1rem;
  }
  .article-excerpt {
    font-size: 1.25rem;
    opacity: 0.9;
    margin-bottom: 1.5rem;
    line-height: 1.6;
  }
  .article-info {
    display: flex;
    gap: 1.5rem;
    font-size: 0.9rem;
  }
  .category {
    background: var(--blue);
    padding: 0.25rem 0.75rem;
    border-radius: 4px;
    font-weight: 500;
  }

  .article-content {
    padding: 4rem 1.5rem;
  }
  .article-content :global(h2) {
    font-size: 1.75rem;
    margin: 3rem 0 1.5rem;
    padding-top: 1rem;
    border-top: 1px solid var(--gray-200, #e9ecef);
  }
  .article-content :global(h2:first-child) {
    margin-top: 0;
    padding-top: 0;
    border-top: none;
  }
  .article-content :global(h3) {
    font-size: 1.25rem;
    margin: 2rem 0 1rem;
  }
  .article-content :global(p) {
    color: var(--gray-600, #495057);
    line-height: 1.8;
    margin-bottom: 1.5rem;
  }
  .article-content :global(ul),
  .article-content :global(ol) {
    color: var(--gray-600, #495057);
    margin-bottom: 1.5rem;
    padding-left: 1.5rem;
  }
  .article-content :global(li) {
    margin-bottom: 0.5rem;
    line-height: 1.7;
  }
  .article-content :global(strong) {
    color: var(--black);
  }
  .article-content :global(a) {
    color: var(--blue);
  }
  .article-content :global(table) {
    width: 100%;
    border-collapse: collapse;
    margin: 2rem 0;
  }
  .article-content :global(th),
  .article-content :global(td) {
    padding: 0.75rem 1rem;
    text-align: left;
    border-bottom: 1px solid var(--gray-200, #e9ecef);
  }
  .article-content :global(th) {
    background: var(--gray-100);
    font-weight: 600;
  }
  .article-content :global(hr) {
    border: none;
    border-top: 1px solid var(--gray-200, #e9ecef);
    margin: 3rem 0;
  }

  .article-footer {
    padding: 4rem 1.5rem;
    background: var(--gray-100);
  }
  .cta-box {
    background: var(--white);
    padding: 2.5rem;
    border-radius: 8px;
    text-align: center;
    margin-bottom: 3rem;
  }
  .cta-box h3 {
    margin-bottom: 0.5rem;
  }
  .cta-box p {
    color: var(--gray-500);
    margin-bottom: 1.5rem;
  }
  .cta-buttons {
    display: flex;
    gap: 1rem;
    justify-content: center;
    flex-wrap: wrap;
  }
  .btn-primary {
    display: inline-block;
    padding: 0.75rem 1.5rem;
    background: var(--blue);
    color: var(--white);
    text-decoration: none;
    border-radius: 4px;
    font-weight: 600;
    transition: background 0.3s ease;
  }
  .btn-primary:hover {
    background: #2589d0;
  }
  .btn-outline {
    display: inline-block;
    padding: 0.75rem 1.5rem;
    border: 2px solid var(--blue);
    color: var(--blue);
    text-decoration: none;
    border-radius: 4px;
    font-weight: 600;
    transition: all 0.3s ease;
  }
  .btn-outline:hover {
    background: var(--blue);
    color: var(--white);
  }

  .related-links h4 {
    margin-bottom: 1rem;
  }
  .related-links ul {
    list-style: none;
    padding: 0;
    display: flex;
    gap: 2rem;
    flex-wrap: wrap;
  }
  .related-links a {
    color: var(--blue);
    text-decoration: none;
  }
  .related-links a:hover {
    text-decoration: underline;
  }

  @media (max-width: 768px) {
    .article-header h1 {
      font-size: 1.75rem;
    }
    .article-excerpt {
      font-size: 1.1rem;
    }
    .related-links ul {
      flex-direction: column;
      gap: 0.5rem;
    }
  }
</style>
