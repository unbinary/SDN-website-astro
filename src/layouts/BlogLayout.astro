---
import BaseLayout from './BaseLayout.astro';

interface Props {
  title: string;
  description: string;
  canonicalPath: string;
  publishDate?: string;
  author?: string;
  category?: 'advertisers' | 'venues';
}

const {
  title,
  description,
  canonicalPath,
  publishDate,
  author = 'SDN Team',
  category = 'advertisers'
} = Astro.props;

const articleSchema = {
  "@context": "https://schema.org",
  "@type": "Article",
  "headline": title,
  "description": description,
  "author": {
    "@type": "Organization",
    "name": "Sports Digital Network"
  },
  "publisher": {
    "@type": "Organization",
    "name": "Sports Digital Network",
    "logo": {
      "@type": "ImageObject",
      "url": "https://sdnetwork.ca/images/logo-light.png"
    }
  },
  "datePublished": publishDate || new Date().toISOString().split('T')[0],
  "dateModified": new Date().toISOString().split('T')[0]
};
---

<BaseLayout
  title={title}
  description={description}
  canonicalPath={canonicalPath}
  schema={articleSchema}
>
  <article class="blog-article">
    <header class="article-header">
      <div class="container">
        <div class="article-meta">
          <a href="/resources/" class="back-link">Resources</a>
          <span class="separator">/</span>
          <a href="/resources/blog/" class="back-link">Blog</a>
        </div>
        <h1><slot name="title" /></h1>
        <p class="article-excerpt"><slot name="excerpt" /></p>
        <div class="article-info">
          <span class="category">{category === 'advertisers' ? 'For advertisers' : 'For venue owners'}</span>
        </div>
      </div>
    </header>

    <div class="article-content">
      <div class="container">
        <slot />
      </div>
    </div>

    <footer class="article-footer">
      <div class="container">
        <div class="cta-box">
          <h3>Ready to get started?</h3>
          <p>Contact our team for a custom proposal tailored to your goals.</p>
          <div class="cta-buttons">
            <a href="/contact/" class="btn-primary">Request a proposal</a>
            <a href="/resources/media-kit/" class="btn-outline">Download media kit</a>
          </div>
        </div>

        <div class="related-links">
          <h4>Related resources</h4>
          <ul>
            <li><a href="/advertisers/">Advertising options</a></li>
            <li><a href="/contact/">Get a quote</a></li>
            <li><a href="/network/locations/">Our venue network</a></li>
            <li><a href="/resources/blog/">More articles</a></li>
          </ul>
        </div>
      </div>
    </footer>
  </article>
</BaseLayout>

<style>
  .blog-article {
    background: var(--white);
  }

  /* Header with gradient and better spacing */
  .article-header {
    padding: 5rem 1.5rem 4rem;
    background: linear-gradient(145deg, var(--black) 0%, #1e3a5f 100%);
    color: var(--white);
  }
  .container {
    max-width: 720px;
    margin: 0 auto;
  }
  .article-meta {
    margin-bottom: 2rem;
    font-size: 0.875rem;
    letter-spacing: 0.02em;
  }
  .back-link {
    color: rgba(255, 255, 255, 0.7);
    text-decoration: none;
    transition: color 0.2s ease;
  }
  .back-link:hover {
    color: var(--white);
  }
  .separator {
    margin: 0 0.5rem;
    opacity: 0.4;
  }
  .article-header h1 {
    font-size: 2.75rem;
    line-height: 1.15;
    margin-bottom: 1.25rem;
    font-weight: 700;
    letter-spacing: -0.02em;
  }
  .article-excerpt {
    font-size: 1.3rem;
    color: rgba(255, 255, 255, 0.85);
    margin-bottom: 2rem;
    line-height: 1.5;
    font-weight: 400;
  }
  .article-info {
    display: flex;
    align-items: center;
    gap: 1.5rem;
    font-size: 0.875rem;
  }
  .category {
    background: var(--blue);
    padding: 0.375rem 1rem;
    border-radius: 20px;
    font-weight: 600;
    font-size: 0.8rem;
    text-transform: uppercase;
    letter-spacing: 0.05em;
  }

  /* Article content with refined typography */
  .article-content {
    padding: 4rem 1.5rem 5rem;
  }
  .article-content :global(h2) {
    font-size: 1.625rem;
    font-weight: 700;
    color: var(--black);
    margin: 3rem 0 1.25rem;
    padding-top: 2rem;
    border-top: 2px solid var(--gray-200, #e9ecef);
    letter-spacing: -0.01em;
  }
  .article-content :global(h2:first-child) {
    margin-top: 0;
    padding-top: 0;
    border-top: none;
  }
  .article-content :global(h3) {
    font-size: 1.25rem;
    font-weight: 600;
    color: var(--black);
    margin: 2.5rem 0 1rem;
    letter-spacing: -0.01em;
  }
  .article-content :global(p) {
    color: #374151;
    font-size: 1.0625rem;
    line-height: 1.75;
    margin-bottom: 1.5rem;
  }
  .article-content :global(ul),
  .article-content :global(ol) {
    color: #374151;
    font-size: 1.0625rem;
    margin-bottom: 1.75rem;
    padding-left: 1.25rem;
  }
  .article-content :global(li) {
    margin-bottom: 0.625rem;
    line-height: 1.7;
    padding-left: 0.5rem;
  }
  .article-content :global(li::marker) {
    color: var(--blue);
  }
  .article-content :global(strong) {
    color: var(--black);
    font-weight: 600;
  }
  .article-content :global(a) {
    color: var(--blue);
    text-decoration: underline;
    text-underline-offset: 2px;
    transition: color 0.2s ease;
  }
  .article-content :global(a:hover) {
    color: #1e7ac0;
  }

  /* Tables */
  .article-content :global(table) {
    width: 100%;
    border-collapse: collapse;
    margin: 2.5rem 0;
    font-size: 0.95rem;
  }
  .article-content :global(th),
  .article-content :global(td) {
    padding: 1rem 1.25rem;
    text-align: left;
    border-bottom: 1px solid var(--gray-200, #e9ecef);
  }
  .article-content :global(th) {
    background: var(--gray-100);
    font-weight: 600;
    color: var(--black);
    border-bottom: 2px solid var(--gray-300, #dee2e6);
  }
  .article-content :global(tr:hover td) {
    background: #f9fafb;
  }
  .article-content :global(hr) {
    border: none;
    border-top: 2px solid var(--gray-200, #e9ecef);
    margin: 3.5rem 0;
  }

  /* Blockquotes */
  .article-content :global(blockquote) {
    border-left: 4px solid var(--blue);
    padding: 1rem 1.5rem;
    margin: 2rem 0;
    background: #f8fafc;
    color: #475569;
    font-style: italic;
  }

  /* Images */
  .article-content :global(.article-image) {
    margin: 2.5rem 0;
    padding: 0;
  }
  .article-content :global(.article-image--hero) {
    margin: 0 0 2.5rem 0;
  }
  .article-content :global(.article-image img) {
    width: 100%;
    height: auto;
    border-radius: 12px;
    box-shadow: 0 8px 30px rgba(0, 0, 0, 0.12);
  }
  .article-content :global(.article-image figcaption) {
    margin-top: 0.75rem;
    font-size: 0.875rem;
    color: #6b7280;
    text-align: center;
    font-style: italic;
  }

  /* Article footer CTA */
  .article-footer {
    padding: 4rem 1.5rem;
    background: linear-gradient(180deg, #f8fafc 0%, #f1f5f9 100%);
  }
  .cta-box {
    background: var(--white);
    padding: 3rem;
    border-radius: 12px;
    text-align: center;
    margin-bottom: 3rem;
    box-shadow: 0 4px 20px rgba(0, 0, 0, 0.06);
    border: 1px solid rgba(0, 0, 0, 0.04);
  }
  .cta-box h3 {
    margin-bottom: 0.75rem;
    font-size: 1.5rem;
    color: var(--black);
  }
  .cta-box p {
    color: #6b7280;
    margin-bottom: 1.75rem;
    font-size: 1.0625rem;
  }
  .cta-buttons {
    display: flex;
    gap: 1rem;
    justify-content: center;
    flex-wrap: wrap;
  }
  .btn-primary {
    display: inline-block;
    padding: 0.875rem 1.75rem;
    background: var(--blue);
    color: var(--white);
    text-decoration: none;
    border-radius: 6px;
    font-weight: 600;
    transition: all 0.2s ease;
    box-shadow: 0 2px 8px rgba(46, 163, 242, 0.3);
  }
  .btn-primary:hover {
    background: #2589d0;
    transform: translateY(-1px);
    box-shadow: 0 4px 12px rgba(46, 163, 242, 0.4);
  }
  .btn-outline {
    display: inline-block;
    padding: 0.875rem 1.75rem;
    border: 2px solid var(--blue);
    color: var(--blue);
    text-decoration: none;
    border-radius: 6px;
    font-weight: 600;
    transition: all 0.2s ease;
  }
  .btn-outline:hover {
    background: var(--blue);
    color: var(--white);
  }

  .related-links {
    text-align: center;
  }
  .related-links h4 {
    margin-bottom: 1.25rem;
    color: #6b7280;
    font-weight: 500;
    font-size: 0.9rem;
    text-transform: uppercase;
    letter-spacing: 0.05em;
  }
  .related-links ul {
    list-style: none;
    padding: 0;
    display: flex;
    gap: 2rem;
    flex-wrap: wrap;
    justify-content: center;
  }
  .related-links a {
    color: var(--blue);
    text-decoration: none;
    font-weight: 500;
    transition: color 0.2s ease;
  }
  .related-links a:hover {
    color: #1e7ac0;
    text-decoration: underline;
  }

  @media (max-width: 768px) {
    .article-header {
      padding: 3.5rem 1.25rem 3rem;
    }
    .article-header h1 {
      font-size: 1.875rem;
    }
    .article-excerpt {
      font-size: 1.125rem;
    }
    .article-content {
      padding: 3rem 1.25rem;
    }
    .article-content :global(h2) {
      font-size: 1.375rem;
    }
    .article-content :global(p),
    .article-content :global(ul),
    .article-content :global(ol) {
      font-size: 1rem;
    }
    .cta-box {
      padding: 2rem 1.5rem;
    }
    .related-links ul {
      flex-direction: column;
      gap: 0.75rem;
    }
  }
</style>
